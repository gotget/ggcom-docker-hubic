#!/usr/bin/env bash
: <<'!COMMENT'

GGCOM - Docker - hubiC v201508081051
Louis T. Getterman IV (@LTGIV)
www.GotGetLLC.com | www.opensour.cc/ggcom/docker/hubic

!COMMENT

# Notice
echo "Attempting to stop hubiC container instance, please wait a moment."

# Ask politely
( docker stop $( docker ps --all --quiet --no-trunc --filter 'name=hubic' ) >/dev/null 2>&1 )

# Perhaps that didn't work, ask impolitely
( docker kill $( docker ps --all --quiet --no-trunc --filter 'name=hubic' ) >/dev/null 2>&1 )

# Farewell
( docker rm $( docker ps --all --quiet --no-trunc --filter 'name=hubic' ) >/dev/null 2>&1 )
